{% extends "WtsdaAppBundle:Layouts:defaultBlank.html.twig" %}

{% block navActIndex %} class="active"{% endblock %}

{% block head_title_tag_page %}Welcome{% endblock %}

{% block body_container_main_content %}
    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner" style="width:1000px; height: 200px;">
            <div class="active item" style="background-image: url('http://geektreks.com/wp-content/uploads/2013/02/11.jpg'); background-size:1000px 200px; width:1000px; height: 200px;">
                <div class="pull-right" style="margin-right:70px; margin-top:15px;">
                    <h1>San Francisco Clinic</h1>
                    <p>Special guests Master Elmore, Master Rupp, and Mr. Cerceau</p>
                    <p>Oct 5th, 2013. Come Join us!</p>
                    <br />
                    <p>
                        <a class="btn btn-primary btn-large">
                            Learn more
                        </a>
                    </p>
                </div>
            </div>
            <div class="item" style="background-image: url('http://www.wtsda-region21.com/Resources/blackbelt.jpeg'); background-size:1000px 200px; width:1000px; height: 200px;">
                <div class="pull-right" style="margin-right:70px; margin-top:15px;">
                    <h1 style="color:white;">Fall Black Belt Test</h1>
                    <p style="color:white;">Come support those testing for Black Belt</p>
                    <p style="color:white;">October 5th. Good luck!</p>
                    <br />
                    <p>
                        <a class="btn btn-primary btn-large">
                            Learn more
                        </a>
                    </p>
                </div>
            </div>
            <div class="item" style="background-image: url('http://www.visitingdc.com/images/seattle-skyline-picture.jpg'); background-size:1000px 200px; width:1000px; height: 200px;">
                <div class="pull-right" style="margin-right:70px; margin-top:15px;">
                    <h1>Seattle Clinic</h1>
                    <p>Special guests Master Auer and Master Rupp</p>
                    <p>July 27th. Come Join us!</p>
                    <br />
                    <p>
                        <a class="btn btn-primary btn-large">
                            Learn more
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
    <div class="row-fluid tiles">
        <div class="span3">
            <div class="well well-small">
                <h5>Latest</h5>
            </div>
        </div>
        <div class="span3">
            <div class="well well-small">
                <h5>Facebook</h5>
            </div>
        </div>
        <div class="span3">
            <div class="well well-small">
                <h5>Twitter</h5>
                {# TODO: Dynamically embed html lang=LANG for twitter to detect #}
                <a class="twitter-timeline" href="https://twitter.com/WTSDARegion1" data-widget-id="376125131824697345" data-chrome="noheader noborders transparent nofooter">Tweets by @WTSDARegion1</a>
